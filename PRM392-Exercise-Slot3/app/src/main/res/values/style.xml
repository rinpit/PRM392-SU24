<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="InformationTextView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_margin">8dp</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">30sp</item>
    <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="CodeFont"
        parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="TextviewStyle"
        parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="TextviewStyle.Blue">
        <item name="android:textColor">#0088CC</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextviewStyle.Blue.Background">
        <item name="android:background">#FBBC09</item>
    </style>

    <style name="StyleBackground">
        <item name="android:background">@color/colorPrimary</item>
    </style>


</resources>